{% extends 'uniMarcaBundle::layout.html.twig' %}

{% block central %}
    <h1>comentarios list</h1>

    <table class="records_list">
        <thead>
            <tr>              
                <th>Tit</th>
                <th>Descrip</th>
                <th>Nick</th>
                <th>Fecha</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('comentarios_show', { 'id': entity.id }) }}">{{ entity.tit }}</a></td>                
                <td>{{ entity.descrip }}</td>
                <td>{{ entity.nick }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>
                <ul>
                    
                    <li>
                        <a href="{{ path('comentarios_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('comentarios_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
