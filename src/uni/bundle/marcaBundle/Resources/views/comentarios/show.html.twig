{% extends 'uniMarcaBundle::layout.html.twig' %}

{% block central %}
    <h1>comentarios</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Tit</th>
                <td>{{ entity.tit }}</td>
            </tr>
            <tr>
                <th>Descrip</th>
                <td>{{ entity.descrip }}</td>
            </tr>
            <tr>
                <th>Nick</th>
                <td>{{ entity.nick }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('comentarios') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('comentarios_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
